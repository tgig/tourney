  <%= radio_button_tag(:id_type, "round", true) %>
  <%= label_tag(:id_type_round, "Round Id") %>
  <%= radio_button_tag(:id_type, "scorecard") %>
  <%= label_tag(:id_type_scorecard, "Scorecard Id") %>
